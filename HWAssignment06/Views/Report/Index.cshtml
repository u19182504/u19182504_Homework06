@model HWAssignment06.Models.ReportViewModel

@{
    ViewBag.Title = "Index";
}
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

    <!-- chartjs -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.js"></script>

    <!-- jspdf -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.5/jspdf.min.js"></script>

    <!-- html2canvas -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>

    <!-- google charts -->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <!-- canvas.js -->
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</head>
<h2>Mountain Bike Order Report</h2>
<br />
<br />
<div>
  
    <div>
        <br />
        <br />
    </div>
    <div style="width:60%; height:40%; background-color:white;" id="chart-container">
        <canvas height="380" width="500" id="myChart"></canvas>
    </div><br>


</div>
<script>
    var model = '@Html.Raw(Json.Encode(Model))';
    var data = JSON.parse(model);
    console.log(data);


    var xValues = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
    var yValues = [data.January, data.February, data.March, data.April, data.May, data.June, data.July, data.August, data.September, data.October, data.November, data.December];
    var barColors = ['rgba(255, 99, 132, 0.6)',
        'rgba(255, 159, 64, 0.6)',
        'rgba(255, 205, 86, 0.6)',
        'rgba(75, 192, 192, 0.6)',
        'rgba(54, 162, 235, 0.6)',
        'rgba(153, 102, 255, 0.6)',
        'rgba(201, 203, 207, 0.6)',
        'rgba(255, 205, 86, 0.6)',
        'rgba(201, 203, 207, 0.6)',
        'rgba(255, 99, 132, 0.6)',
        'rgba(54, 162, 235, 0.6)',
        'rgba(255, 99, 132, 0.6)'];
    var border_col = [
        'rgba(255, 99, 132)',
        'rgba(255, 159, 64)',
        'rgba(255, 205, 86)',
        'rgba(75, 192, 192)',
        'rgba(54, 162, 235)',
        'rgba(153, 102, 255)',
        'rgba(201, 203, 207)',
        'rgba(255, 205, 86)',
        'rgba(201, 203, 207)',
        'rgba(255, 99, 132)',
        'rgba(54, 162, 235)',
        'rgba(255, 99, 132)'
    ]
    new Chart("myChart", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: barColors,
                borderColor: border_col,
                borderWidth: 1,
                data: yValues
            }]
        },
        options: {
            animation: {
                duration: 0
            },
            title: {
                display: true,
                text: "Hall Of Fame"
            },
            legend: { display: false },
            scales: {
                yAxes: [{
                    display: true,
                    ticks: {
                        beginAtZero: true
                    }
                }],
                xAxes: [{
                    display: true,
                    ticks: {
                        autoSkip: false
                    }
                }],
            },
            title: {
                display: false,
            }
        }
    });

    function downloadPDF(pdf) {
        const linkSource = `data:application/pdf;base64,${pdf}`;
        const downloadLink = document.createElement("a");
        const fileName = "abc.pdf";
        downloadLink.href = linkSource;
        downloadLink.download = fileName;
        downloadLink.click();
    }

    var downloadChartJs = () => {
        html2canvas(document.getElementById("chart-container"), {
            onrendered: function (canvas) {
                var img = canvas.toDataURL(); //image data of canvas

                const base64Canvas = canvas.toDataURL("image/jpeg").split(';base64,')[1];
                console.log(base64Canvas);
                var imgSampleData = 'data:image/jpeg;base64,'+base64Canvas;
                var doc = new jsPDF();
                doc.addImage(imgSampleData, 10, 10);
                doc.save('test.pdf');
            }
        });
    }
    document.getElementById("chartJsDownloadButton").addEventListener("click", downloadChartJs);

</script>

